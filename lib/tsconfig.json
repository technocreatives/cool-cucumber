{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "checkJs": false,
    // node 16
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "types": [
      "node",
      "jest"
    ],
    // form dist build
    "declaration": true,
    "stripInternal": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
}
